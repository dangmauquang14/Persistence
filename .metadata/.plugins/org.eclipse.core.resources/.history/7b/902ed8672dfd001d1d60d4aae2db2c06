package phonglogic.generic;

import java.util.Scanner;

public class Mang2Chieu {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int row = 6, col = 6;
		String[][] a = new String[row][col];
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < col; j++) {
				a[i][j] = "*";
				if(i > 0 && i < row - 1) {
					if(j == 0 || j == col - 1) {
						a[i][j] = "*";;
					} else
						a[i][j] = " ";
				}
			}
		}
		
		System.out.println("Mảng vừa nhập: ");
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < col; j++) {
				System.out.print(a[i][j] + " ");
			}
			System.out.println("\n");
		}
	}
	
	public static String[][] insert(String[][] a){
		
		
		return null;
		
	}
	
	public static void print(String[int row][int col] a){
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < col; j++) {
				System.out.print(a[i][j] + " ");
			}
			System.out.println("\n");
		}
	}
}
